@page
@model BookInventoryManager.Pages.Authors.CreateModel

@{
    ViewData["Title"] = "Add Author";
}

<div>
    <a class="button secondary" asp-page="Index">Back to List</a>
</div>

<h1>Create Author</h1>

<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Author.FirstName"></label>
        <div><span class="text-danger" asp-validation-for="Author.FirstName"></span></div>
        <input asp-for="Author.FirstName" data-role="input" />
    </div>

    <div>
        <label asp-for="Author.Surname"></label>
        <div><span class="text-danger" asp-validation-for="Author.Surname"></span></div>
        <input asp-for="Author.Surname" data-role="input" />
    </div>

    <div>
        <input type="submit" value="Create" />
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
