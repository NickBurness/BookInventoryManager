@page
@model BookInventoryManager.Pages.Authors.EditModel

@{
    ViewData["Title"] = "Edit Author";
}
<div>
    <a class="button secondary" asp-page="./Index">Back to List</a>
</div>

<h1>Edit Author</h1>
<hr />


<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Author.ID" />

    <div class="form-group">
        <label asp-for="Author.FirstName"></label>
        <input asp-for="Author.FirstName" data-role="input" />
        <span asp-validation-for="Author.FirstName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author.Surname"></label>
        <input asp-for="Author.Surname" data-role="input" />
        <span asp-validation-for="Author.Surname"></span>
    </div>

    <div class="form-group">
        <input class="button primary" type="submit" value="Save" />
    </div>
</form>


<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
