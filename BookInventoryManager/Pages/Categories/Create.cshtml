@page
@model BookInventoryManager.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Create Category";
}

<div>
    <a class="button secondary" asp-page="./Index">Back to List</a>
</div>

<h1>Create Category</h1>

<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" data-role="input" />
        <span asp-validation-for="Category.Name"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" />
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
