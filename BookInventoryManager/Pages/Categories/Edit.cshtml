@page
@model BookInventoryManager.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit Category";
}

<div>
    <a class="button secondary" asp-page="./Index">Back to List</a>
</div>

<h1>Edit Category</h1>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Category.ID" />

    <div>
        <label asp-for="Category.Name"></label>
        <div><span class="text-danger" asp-validation-for="Category.Name"></span></div>
        <input asp-for="Category.Name" data-role="input" />
    </div>

    <div>
        <input class="button primary" type="submit" value="Save" />
    </div>
</form>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
